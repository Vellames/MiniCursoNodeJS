html
  head
    title Finanças Pessoais
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name="charset", content="utf-8")

    link(href="/css/bootstrap.min.css", rel="stylesheet")
    link(href="/css/pages/style.css", rel="stylesheet")
    block stylesheets

    script(src="/js/jquery-3.2.1.min.js")
    script(src="/js/bootstrap.min.js")
    script(src='/js/pages/main.js')
    block scripts
  body
    nav.navbar.navbar-default
      .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
              span.sr-only Toggle navigation    
              span.icon-bar       
              span.icon-bar      
              span.icon-bar  
            a.navbar-brand(href='/') Home 
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a(href='/category') Categorias
              li
                a(href='/movement') Movimentações
            ul.nav.navbar-nav.navbar-right
              li
                a(href='#') Sair
    
    if messages.success != ''
      div.container-fluid
        div.alert.alert-success(role='alert') #{messages.success}
    else if messages.error != ''
      div.container-fluid
          div.alert.alert-danger(role='alert') #{messages.error}
    else if messages.info != ''
      div.container-fluid
          div.alert.alert-info(role='alert') #{messages.info}
          
    block mainContent